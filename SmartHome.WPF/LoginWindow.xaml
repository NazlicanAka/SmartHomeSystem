<Window x:Class="SmartHome.WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Akıllı Ev - Giriş" Height="450" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel Margin="30" VerticalAlignment="Center">
        <TextBlock Text="🏠 AKILLI EV SİSTEMİ" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="#FF2196F3"/>

        <!-- GİRİŞ BÖLÜMÜ -->
        <TextBlock Text="Kullanıcı Adı:" Margin="0,0,0,5" FontWeight="Bold"/>
        <TextBox Text="{Binding Username}" Margin="0,0,0,15" Padding="8" FontSize="14"/>

        <TextBlock Text="Şifre:" Margin="0,0,0,5" FontWeight="Bold"/>
        <PasswordBox x:Name="PasswordBox" Margin="0,0,0,20" Padding="8" FontSize="14" PasswordChar="●"/>

        <Button Content="🔑 Sisteme Giriş Yap" 
                Command="{Binding LoginCommand}" 
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" 
                Padding="12" Background="#FF4CAF50" Foreground="White" FontWeight="Bold" FontSize="14" Cursor="Hand" Margin="0,0,0,25"/>

        <!-- AYIRICI ÇİZGİ -->
        <Separator Margin="0,0,0,20"/>

        <!-- KAYIT BÖLÜMÜ -->
        <TextBlock Text="Hesabınız yok mu? Yeni hesap oluşturun:" Margin="0,0,0,10" Foreground="Gray" HorizontalAlignment="Center" FontSize="12"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="👨‍👩‍👧 Ebeveyn Kayıt" Command="{Binding RegisterParentCommand}" Margin="0,0,10,0" Padding="10,8" Background="#FF2196F3" Foreground="White" Cursor="Hand" FontSize="12"/>
            <Button Content="👶 Çocuk Kayıt" Command="{Binding RegisterChildCommand}" Padding="10,8" Background="#FFFF9800" Foreground="White" Cursor="Hand" FontSize="12"/>
        </StackPanel>
    </StackPanel>
</Window>