<Window x:Class="SmartHome.WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Akıllı Ev - Giriş" Height="300" Width="350" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="30" VerticalAlignment="Center">
        <TextBlock Text="Hesabınız yok mu? Yeni bir hesap oluşturun:" Margin="0,20,0,5" Foreground="Gray" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Ebeveyn Olarak Kayıt Ol" Command="{Binding RegisterParentCommand}" Margin="0,0,10,0" Padding="8" Background="#FF2196F3" Foreground="White" Cursor="Hand"/>
            <Button Content="Çocuk Olarak Kayıt Ol" Command="{Binding RegisterChildCommand}" Padding="8" Background="#FFFF9800" Foreground="White" Cursor="Hand"/>
        </StackPanel>
        <TextBlock Text="Kullanıcı Adı:" Margin="0,0,0,5" FontWeight="Bold"/>
        <TextBox Text="{Binding Username}" Margin="0,0,0,15" Padding="8" FontSize="14"/>

        <TextBlock Text="Şifre:" Margin="0,0,0,5" FontWeight="Bold"/>
        <TextBox Text="{Binding Password}" Margin="0,0,0,25" Padding="8" FontSize="14"/>

        <Button Content="Sisteme Giriş Yap" 
                Command="{Binding LoginCommand}" 
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" 
                Padding="10" Background="#FF4CAF50" Foreground="White" FontWeight="Bold" FontSize="14" Cursor="Hand"/>
    </StackPanel>
</Window>