<Window x:Class="SmartHome.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Akıllı Ev Yönetim Sistemi" 
        Height="700" Width="1200"
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal">

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0,0,0,15" LastChildFill="False">

            <Button DockPanel.Dock="Right" Content="🚪 Çıkış Yap" 
                    Command="{Binding LogoutCommand}" 
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" 
                    Width="100" Padding="8" Background="#FFF44336" Foreground="White" FontWeight="Bold" Cursor="Hand"/>

            <Button DockPanel.Dock="Right" Content="📊 Geçmiş" 
                    Command="{Binding ShowDeviceHistoryCommand}" 
                    Width="100" Margin="0,0,10,0" Padding="8" Background="#FF9C27B0" Foreground="White" FontWeight="Bold" Cursor="Hand"/>

            <StackPanel DockPanel.Dock="Left" VerticalAlignment="Center">
                <!-- İlk Satır: Yenile Butonu -->
                <WrapPanel Margin="0,0,0,10">
                    <Button Content="🔄 Yenile" Command="{Binding LoadDevicesCommand}" Width="80" Margin="0,0,15,0" Padding="8" Cursor="Hand"/>

                    <CheckBox Content="📱 Konum: Ev Wi-Fi Ağına Bağlı"
                              IsChecked="{Binding IsHomeNetworkConnected, UpdateSourceTrigger=PropertyChanged}"
                              Command="{Binding TogglePresenceCommand}"
                              Margin="0,0,0,0" VerticalAlignment="Center"
                              FontWeight="Bold" Foreground="#FF2196F3" Cursor="Hand">
                        <CheckBox.LayoutTransform>
                            <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                        </CheckBox.LayoutTransform>
                    </CheckBox>
                </WrapPanel>

                <!-- İkinci Satır: Cihaz Ekleme Formu -->
                <WrapPanel>
                    <TextBlock Text="Cihaz Adı:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="Bold"/>
                    <TextBox Text="{Binding NewDeviceName}" Width="150" Padding="5" Margin="0,0,15,0"/>

                    <TextBlock Text="Protokol:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="Bold"/>
                    <ComboBox ItemsSource="{Binding Protocols}" SelectedItem="{Binding SelectedProtocol}" Width="100" Margin="0,0,15,0" VerticalContentAlignment="Center"/>

                    <TextBlock Text="Cihaz Türü:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="Bold"/>
                    <ComboBox ItemsSource="{Binding DeviceTypes}" SelectedItem="{Binding NewDeviceType}" Width="120" Margin="0,0,15,0" VerticalContentAlignment="Center"/>

                    <Button Content="➕ Cihaz Ekle" Command="{Binding AddDeviceCommand}" Padding="10,5" Background="#FF4CAF50" Foreground="White" FontWeight="Bold" Cursor="Hand"/>
                </WrapPanel>
            </StackPanel>
        </DockPanel>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Devices}" AutoGenerateColumns="False" 
                  CanUserAddRows="False" IsReadOnly="True" AlternatingRowBackground="#FFF0F0F0" RowHeight="40">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Cihaz Adı" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Durum" Binding="{Binding StatusText}" Width="120"/>
                <DataGridTemplateColumn Header="İşlemler" Width="270">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Aç/Kapat" 
                                        Command="{Binding DataContext.ToggleDeviceCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                        CommandParameter="{Binding}" 
                                        Margin="0,0,5,0" Padding="8,5" Cursor="Hand" Background="#FF2196F3" Foreground="White" FontWeight="Bold"/>

                                <Button Content="📊 Geçmiş" 
                                        Command="{Binding DataContext.ShowSpecificDeviceHistoryCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                        CommandParameter="{Binding}" 
                                        Margin="0,0,5,0" Padding="8,5" Cursor="Hand" Background="#FF9C27B0" Foreground="White" FontWeight="Bold"/>

                                <Button Content="🗑️ Sil" 
                                        Command="{Binding DataContext.DeleteDeviceCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                        CommandParameter="{Binding}" 
                                        Padding="8,5" Cursor="Hand" Background="#FFF44336" Foreground="White" FontWeight="Bold"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- SignalR Bağlantı Durumu - Sağ Alt Köşe -->
        <Border Grid.Row="1" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Bottom" 
                Background="#F0FFFFFF" 
                BorderBrush="#FFCCCCCC" 
                BorderThickness="1" 
                CornerRadius="3" 
                Padding="8,4" 
                Margin="0,0,10,10">
            <TextBlock Text="{Binding ConnectionStatus}" 
                       FontSize="10" 
                       Foreground="#FF555555"
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>